@model Core.Entity.AuthenticateModel
<div class="container">
    <h2>Create User </h2>
    <form asp-action="CreateUser" asp-controller="UserDetails">
        <div class="form-group">
            <label asp-for="UserName">User Name:</label>
            <input class="form-control" asp-for="UserName">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" for="pwd">Password:</label>
            <input class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" for="pwd">Confirm Password:</label>
            <input class="form-control" asp-for="ConfirmPassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

